{
  "compilerOptions": {
    "outDir": "./lib",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": [
      "dom",
      "es7"
    ]
  },
  "include": [
      "./src/**/*"
  ]
}